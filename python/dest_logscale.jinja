#
{%- for filter in config["filters"] %}
filter {{ filter.name }}{
    {{ filter.condition }}
};
{% endfor %}
#
destination d_logscale{
    logscale(
        url('{{ url }}')
        token('{{ token }}')
    );
};
#
{%- for logPath in config["logPaths"] %}
#
log {{ logPath.name }}{
    {%- if logPath["filters"] %}
    filter {
        {{ ' or '.join(logPath["filters"]) }};
    };
    {%- endif %}

    rewrite {
        set('t_logscale_otel_msg', value('.logscale.template') condition("${.otel.com.segway.msgtemplate}" eq ""));
        set('t_logscale_otel_msg', value('.logscale.template') condition("${.otel.com.segway.msgtemplate}" ne ""));
        set("{{ logPath.repo }}", value('.logscale.hec.index'));
    {%- if logPath.source %}
        set("{{ logPath.source }}", value('.logscale.hec.source'));
    {%- endif %}
    {%- if logPath.sourcetype %}
        set("{{ logPath.sourcetype }}", value('.logscale.hec.sourcetype'));
    {%- endif %}
    {%- for tag in logPath.tags %}    
        set("{{ tag.value }}", value('.logscale.tags.{{ tag.name }}'));
    {%- endfor %}
    };

    destination(d_logscale);

    {%- if logPath.flags %}
    flags({{ ','.join(logPath.flags) }});
    {%- endif %}
};
{% endfor %}
#